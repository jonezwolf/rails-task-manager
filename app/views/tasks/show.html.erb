<h1><%= @task.title %></h1>

<div class="box">
  <p><%= @task.details %></p>
</div>

<p><input type="checkbox"<%= "checked" if @task.completed %>>
  <%= "This task is completed" if @task.completed %>
  <%= "This task is not completed yet" if @task.completed == false %>
</p>
<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit this task", edit_task_path %>
